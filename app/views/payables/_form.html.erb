<div class="container">
  <h5> Enter New Payable </h5>
  <%= form_for [ @property, Payable.new], remote: true do |f| %>
    <% if @payable.errors.any? %>
       <div class="alert alert-danger">
         <h4>There are <%= pluralize(@payable.errors.count, "error") %>.</h4>
         <ul>
           <% @payable.errors.full_messages.each do |msg| %>
             <li><%= msg %></li>
           <% end %>
         </ul>
       </div>
      <% end %>
      <ul class="list-inline">
        <li><%= form_group_tag(@payable.errors[:vendor]) do %>
              <%= f.label :vendor %>
              <%= f.text_field :vendor, class: 'form-control input-sm', placeholder: "Enter Vendor" %>
            <% end %></li>
        <li><%= form_group_tag(@payable.errors[:vendor]) do %>
              <%= f.text_field :amount, class: 'form-control input-sm', placeholder: "Enter Amount" %>
            <% end %>
        </li>
      </ul>
      <ul class="list-inline">
        <li><%= form_group_tag(@payable.errors[:vendor]) do %>
              <%= f.label :date %>
              <%= f.date_select :date, class: 'form-control input-sm', placeholder: "Enter Date" %>
            <% end %></li>
        <li><%= form_group_tag(@payable.errors[:vendor]) do %>
              <%= f.label :duedate %>
              <%= f.date_select :duedate, class: 'form-control input-sm', placeholder: "Enter Due Date" %>
           <% end %>
        </li>
      </ul>
     <div class="form-group">
       <%= f.submit "Save", class: 'btn btn-success btn-sm' %>
     </div>
  <% end %>
</div>
