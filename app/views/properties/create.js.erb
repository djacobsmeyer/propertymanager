<% if @property.valid? %>
   $('.js-properties').prepend("<%= escape_javascript(render(@property)) %>");
   $('.new-property').html("<%= escape_javascript(render partial: 'property/form', locals: { property: @new_property }) %>");
 <% else %>
   $('.new-property').html("<%= escape_javascript(render partial: 'property/form', locals: { property: @property }) %>");
 <% end %>
