<nav class="navbar navbar-default" >
  <div class="container-fluid">
    <!-- Button and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <button type="button" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        <%= link_to "", properties_path %>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      <ul class="nav navbar-nav" id="prop-nav">
        <% if current_user %>
          <% current_user.properties.each do |prop| %>
            <% params[:id] == prop.id.to_s ? active = "active" : active = "" %>
            <%= content_tag :li, class: active do %>
              <%= link_to prop.address, prop %>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
