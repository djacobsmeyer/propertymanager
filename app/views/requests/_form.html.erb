<h3> New Request </h3>
<%= form_for [ Request.new], remote: true do |f| %>
  <% if @request.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(@request.errors.count, "error") %>.</h4>
       <ul>
         <% @request.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
    <% end %>
  <div class="container, col-md-8">
    <%= form_group_tag(@request.errors[:title]) do %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter Title" %>
    <% end %>
    <%= form_group_tag(@request.errors[:description]) do %>
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', placeholder: "Enter Description" %>
    <% end %>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  </div>
 <% end %>
